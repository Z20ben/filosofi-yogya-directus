# ========================================
# Directus Configuration for Filosofi Yogya
# ========================================

# General Settings
HOST=0.0.0.0
PORT=8055
PUBLIC_URL=http://localhost:8055

# ========================================
# License Compliance (BSL 1.1)
# ========================================
# Project owner email - required for Directus BSL 1.1 compliance
PROJECT_OWNER=admin@example.com
# ========================================

# ========================================
# Database Configuration - PostgreSQL
# ========================================
DB_CLIENT=pg
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=filosofi_yogya_directus
DB_USER=postgres
DB_PASSWORD=YOUR_POSTGRES_PASSWORD_HERE

# ========================================
# Security Keys
# ========================================
KEY=replace-with-random-key-generate-with-openssl
SECRET=replace-with-random-secret-generate-with-openssl

# ========================================
# Admin Account (First time setup)
# ========================================
ADMIN_EMAIL=admin@filosofi-yogya.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ========================================
# Optional Settings
# ========================================
LOG_LEVEL=info
LOG_STYLE=pretty

# CORS Settings
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMITER_ENABLED=true
RATE_LIMITER_POINTS=50
RATE_LIMITER_DURATION=1

# File Upload
MAX_PAYLOAD_SIZE=16mb

# Cache
CACHE_ENABLED=true
CACHE_STORE=memory
